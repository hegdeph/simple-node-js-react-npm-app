
    pipeline{
    
    agent {
            label 'Jenkins-Cloud-Agent-Docker'
          }
        
    stages {
        
        
        stage('Build') {
            environment {
              CI = 'true'
          }
          
            steps {
                sh 'npm install'
            }
            
        }
        
       stage('Build image') {
           
           
           steps{
                sh "docker build --build-arg APP_NAME=sample -t 424377644605.dkr.ecr.eu-west-2.amazonaws.com/f2ride-dev-repo:latest -f Dockerfile ."
           }
    }
    stage('Push image') {
        
        
        
        steps {
            script{
                 docker.withRegistry('https://424377644605.dkr.ecr.eu-west-2.amazonaws.com/f2ride-dev/nodeapp', 'ecr:eu-west-2:Prasanna-Dev') 
            }
            
                {
                sh "docker push 424377644605.dkr.ecr.eu-west-2.amazonaws.com/f2ride-dev/nodeapp:latest"
                }
        }
    }
        
    }
    }
